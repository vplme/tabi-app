<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <PackageTargetFallback>portable-net45+win8+wpa81+wp8;portable45-net45+win8+wpa81</PackageTargetFallback>
    <DebugType>full</DebugType>
    <!-- csproj based on https://oren.codes/2017/04/23/using-xamarin-forms-with-net-standard-vs-2017-edition/  -->
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CsvHelper" Version="2.16.3" />
    <PackageReference Include="Refractored.MvvmHelpers" Version="1.3.0" />
    <PackageReference Include="PCLStorage" Version="1.0.2" />
    <PackageReference Include="FormsToolkit" Version="1.1.18" />
    <PackageReference Include="SharpKml.Core" Version="3.0.0" />
    <PackageReference Include="System.ValueTuple" Version="4.4.0" />
    <PackageReference Include="Xam.Plugin.Connectivity" Version="2.3.0" />
    <PackageReference Include="Xamarin.Forms.Maps" Version="2.3.4.247" />
    <PackageReference Include="Xamarin.Forms" Version="2.3.4.247" />
    <PackageReference Include="Xam.Plugins.Settings" Version="2.5.8" />
    <PackageReference Include="Plugin.Permissions" Version="2.0.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="1.1.1" />
    <PackageReference Include="Xam.Plugin.Battery" Version="3.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Xml" Version="1.1.2" />
    <PackageReference Include="System.Threading.Tasks.Dataflow" Version="4.7.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="1.1.2" />
    <PackageReference Include="Microsoft.Azure.Mobile" Version="0.14.0" />
    <PackageReference Include="Microsoft.Azure.Mobile.Distribute" Version="0.14.0" />
    <PackageReference Include="Microsoft.Azure.Mobile.Analytics" Version="0.14.0" />
    <PackageReference Include="Microsoft.Azure.Mobile.Crashes" Version="0.14.0" />
    <PackageReference Include="sqlite-net-pcl" Version="1.4.118" />
  </ItemGroup>
  <ItemGroup>
    <!-- https://bugzilla.xamarin.com/show_bug.cgi?id=55591 -->
    <None Remove="**\*.xaml" />
    <EmbeddedResource Include="**\*.xaml" SubType="Designer" Generator="MSBuild:UpdateDesignTimeXaml" />
    <!-- Visual Studio for Mac will not display App.xaml
         with subitem App.xaml.cs when using "Compile Update=" but instead
         show the two files separately. This does not seem to affect VS-Win.
         First removing all .xaml.cs files and then re-Include-ing them to fix
         this issue.
    -->
    <Compile Remove="**\*.xaml.cs" />
    <Compile Include="**\*.xaml.cs" DependentUpon="%(Filename)" />
    <EmbeddedResource Update="Resx\AppResources.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>AppResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <Compile Update="Resx\AppResources.Designer.cs">
      <DependentUpon>AppResources.resx</DependentUpon>
    </Compile>
    <EmbeddedResource Update="Resx\AppResources.nl.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>AppResources.nl.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <Compile Update="Resx\AppResources.nl.Designer.cs">
      <DependentUpon>AppResources.nl.resx</DependentUpon>
    </Compile>
    <Compile Update="Controls\FooterDivider.xaml.cs">
      <DependentUpon>FooterDivider.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\HeaderDivider.xaml.cs">
      <DependentUpon>HeaderDivider.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\LabelSection.xaml.cs">
      <DependentUpon>LabelSection.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\SectionDivider.xaml.cs">
      <DependentUpon>SectionDivider.xaml</DependentUpon>
    </Compile>
    <None Remove="tabi.config" />
    <EmbeddedResource Include="tabi.config" />
    <Compile Update="Controls\SettingsSectionDivider.xaml.cs">
      <DependentUpon>SettingsSectionDivider.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\TabiTextCell.xaml.cs">
      <DependentUpon>TabiTextCell.xaml</DependentUpon>
    </Compile>
    <None Remove="appsettings.json" />
    <Compile Update="Controls\DateSwitchView.xaml.cs">
      <DependentUpon>DateSwitchView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\ActivityOverviewCell.xaml.cs">
      <DependentUpon>ActivityOverviewCell.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\TabiRaisedButton.xaml.cs">
      <DependentUpon>TabiRaisedButton.xaml</DependentUpon>
    </Compile>
    <None Remove="tabi.csv" />
    <EmbeddedResource Include="tabi.csv">
      <LogicalName>Tabi.DemoCsv</LogicalName>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="App.xaml.cs">
      <DependentUpon>App.xaml</DependentUpon>
    </Compile>
    <Compile Update="MainPage.xaml.cs">
      <DependentUpon>MainPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\StopView.xaml.cs">
      <DependentUpon>StopView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\TripView.xaml.cs">
      <DependentUpon>TripView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\ActivityDetailPage.xaml.cs">
      <DependentUpon>ActivityDetailPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\ActivityOverviewMockupPage.xaml.cs">
      <DependentUpon>ActivityOverviewMockupPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\ActivityOverviewPage.xaml.cs">
      <DependentUpon>ActivityOverviewPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\DayMapPage.xaml.cs">
      <DependentUpon>DayMapPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\LogsPage.xaml.cs">
      <DependentUpon>LogsPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\MapRoutePage.xaml.cs">
      <DependentUpon>MapRoutePage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\PositionsDebugPage.xaml.cs">
      <DependentUpon>PositionsDebugPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\SettingsPage.xaml.cs">
      <DependentUpon>SettingsPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\StopDetailPage.xaml.cs">
      <DependentUpon>StopDetailPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\StopsDebugPage.xaml.cs">
      <DependentUpon>StopsDebugPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\TabiPage.xaml.cs">
      <DependentUpon>TabiPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\TabiTabbedPage.xaml.cs">
      <DependentUpon>TabiTabbedPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\MainPage.xaml.cs">
      <DependentUpon>MainPage.xaml</DependentUpon>
    </Compile>
    <Compile Update="Pages\PermissionsPage.xaml.cs">
      <DependentUpon>PermissionsPage.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Resources" />
    <Folder Include="Resx\" />
    <Folder Include="Extensions\" />
    <Folder Include="Localization\" />
    <Folder Include="Collection\" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Tabi.DataStorage\Tabi.DataStorage.csproj" />
    <ProjectReference Include="..\Tabi.DataStorage.SqliteNet\Tabi.DataStorage.SqliteNet.csproj" />
  </ItemGroup>
</Project>