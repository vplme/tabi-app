<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:control="clr-namespace:Tabi.Shared.Controls;assembly=Tabi.Shared" xmlns:i18n="clr-namespace:Tabi.Shared.Localization;assembly=Tabi.Shared" x:Class="Tabi.Shared.IntroViews.FirstIntroView">
    <ContentView.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="Android" Value="0, 0, 0, 0" />
            <On Platform="iOS" Value="0, 20, 0, 0" />
        </OnPlatform>
    </ContentView.Padding>
    <ContentView.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout VerticalOptions="FillAndExpand">
                <Label HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Text="{i18n:Translate IntroWelcomeTitle}" />
                <Label HorizontalOptions="Start" VerticalOptions="Center" Margin="10, 0, 10, 0" HorizontalTextAlignment="Start" Text="{i18n:Translate IntroWelcomeText}" />
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <control:MaterialButton Margin="30, 0, 30, 30" Text="{i18n:Translate ContinueButton}" Style="{StaticResource defaultButtonStyle}" Command="{Binding NextCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>