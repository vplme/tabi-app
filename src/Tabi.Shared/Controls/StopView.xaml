<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tabi.StopView" x:Name="stop">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" BindingContext="{x:Reference stop}">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Command}" NumberOfTapsRequired="1" />
            </StackLayout.GestureRecognizers>
            <Image WidthRequest="50" HeightRequest="50" Source="location" />
            <StackLayout Orientation="Vertical">
                <Label VerticalOptions="Center" TextColor="#000000" FontSize="20" Text="{Binding Path=Text}" />
                <Label VerticalOptions="Center" TextColor="#000000" FontSize="13" Text="{Binding Path=DetailText}" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>